/dts-v1/;

#include "k230.dtsi"

/ {
	model = "Banana Pi CanMV-K230D-Zero";
	compatible = "canaan,kendryte-k230";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
	};

	chosen {
		bootargs = "earlycon=sbi console=tty0 console=ttyS0,115200 loglevel=7 g_ether.dev_addr=02:3b:00:4b:23:0d g_ether.host_addr=02:3b:00:4b:23:0a";
		stdout-path = "serial0:115200";
	};
};

&uart0 {
	status = "okay";
};
/*
&uart1 {
	status = "okay";
};
*/
&usb0 {
	status = "okay";
	dr_mode = "otg";
};
